@model WebApplication3.Models.MainViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/lib/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/venobox/venobox.css" rel="stylesheet">
    <link href="~/lib/style.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/c87e6362d3.js" crossorigin="anonymous"></script><!--icon-->
    <link rel="preconnect" href="https://fonts.gstatic.com"><!--YAZI_TİPİ-->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>
<body id="page-top">
    <!--NAVBAR BAŞLANGIÇ-->
    @await Component.InvokeAsync("Navigation")

    <main role="main">
        @RenderBody()
    </main>


    <!--ALT KISIM BAŞLANGIÇ-->
    @await Component.InvokeAsync("Footer")


    <!--ALT KISIM BİTİŞ-->

    <!--SCRİPT DOSYALARI-->
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-609a8aec5b54d94a"></script>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/lib/php-email-form/validate.js"></script>
    <script src="~/lib/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/lib/counterup/jquery.counterup.min.js"></script>
    <script src="~/lib/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/lib/typed.js/typed.min.js"></script>
    <script src="~/lib/venobox/venobox.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
